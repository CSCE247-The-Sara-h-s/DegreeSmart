<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="degreesmart.view.SettingsController">
    <children>
        <fx:include fx:id="headerPane" source="header-pane.fxml"/>
        <GridPane maxHeight="Infinity" VBox.vgrow="ALWAYS" fx:id="content">
            <columnConstraints>
                <ColumnConstraints percentWidth="18" />
                <ColumnConstraints percentWidth="4" />
                <ColumnConstraints percentWidth="78" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="4" />
                <RowConstraints percentHeight="30" />
                <RowConstraints percentHeight="60" />
                <RowConstraints percentHeight="6" />
            </rowConstraints>

            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2" style="-fx-background-color: #650808;" maxWidth="Infinity" maxHeight="Infinity" GridPane.fillWidth="true" GridPane.fillHeight="true" alignment="CENTER">
                <ImageView preserveRatio="true" fitHeight="100" fitWidth="100">
                    <Image url="@../images/default_settings_icon.png" />
                </ImageView>
            </VBox>

            <VBox GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="1" style="-fx-background-color: white;" maxWidth="Infinity" maxHeight="Infinity" GridPane.fillWidth="true" GridPane.fillHeight="true">
            </VBox>

            <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="1" GridPane.rowSpan="3" style="-fx-background-color: lightgrey;" maxWidth="Infinity" maxHeight="Infinity" GridPane.fillWidth="true" GridPane.fillHeight="true">
            </VBox>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="1" GridPane.rowSpan="1" style="-fx-background-color: lightgrey;" maxWidth="Infinity" maxHeight="Infinity" GridPane.fillWidth="true" GridPane.fillHeight="true">
            </VBox>

            <padding>
              <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
           </padding>
        </GridPane>
        <fx:include fx:id="footerPane" source="footer-pane.fxml"/>
    </children>
    <padding>
    </padding>
    <stylesheets>
      <URL value="@../styles/styles.css"/>
   </stylesheets>
</VBox>
